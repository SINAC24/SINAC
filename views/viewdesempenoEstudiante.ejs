<%- include('panelNavBar.ejs'); %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Desempeño del grupo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <!-- Contenedor principal -->
    <div class="container my-5">
        <!-- Título de la página -->
        <div class="row">
            <div class="col-12 text-center mb-4">
                <h1>Desempeño del Grupo</h1>
                <p class="text-muted">Comentarios sobre el rendimiento en el periodo seleccionado</p>
            </div>
        </div>

        <!-- Tabla de comentarios -->
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
                <table class="table table-bordered table-hover">
                    <thead class="table-primary">
                        <tr>
                            <th scope="col">Comentario</th>
                        </tr>
                    </thead>
                    <tbody>
                        
                        <% if (data.length > 0) { %>
                            <% data.forEach(function(comentario) { %>
                                
                                <tr>
                                    <td>Materia: <%= comentario.matNombre %></td>
                                </tr>
                                <tr>
                                    <td><%= comentario.comentario %></td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td class="text-center">No hay comentarios disponibles para este periodo.</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Botón de regreso -->
        <!-- <div class="row">
            <div class="col-12 text-center mt-4">
                <a href="/ruta-de-regreso" class="btn btn-secondary">Volver</a>
            </div>
        </div> -->
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>